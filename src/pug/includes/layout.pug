block config
  include ./components/config.pug

include metatags_webapp.pug
include ./components/navigation_off_canvas.pug
include ./components/contacto.pug
include ./components/picture_webp.pug
include ./components/slid.pug
include ./components/slid/slidImg.pug
include ./components/slid/slidTitle.pug
include ./components/slid/slidDescrip.pug
include ./components/slid/slidControl.pug

doctype html
html(lang='es')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    +metatagsWebApp()
    block metatags
    title #{pageTitle} | #{siteTitle}
    meta(name="description" content=description)
    meta(name="application-name", content=siteTitle)
    link(rel="stylesheet", href="./style.css")
  body
    +navigationOffCanvas([
      [pages[0], sites[0], ''],
      [pages[1], sites[1], ''],
      [pages[2], sites[2], ''],
      [pages[3], sites[3], '']
    ] )
    block content

    script(src="./script.js")
    script(src="/node_modules/wowjs/dist/wow.min.js")
    script new WOW().init();
